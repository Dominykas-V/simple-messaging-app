{% extends 'base.html.twig' %}

{% block title %}TMessages{% endblock %}

{% block body %}
    <h1>TMessages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ t_message.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ t_message.name }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ t_message.message }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ t_message.created ? t_message.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_messages_index') }}">back to list</a>

    <a href="{{ path('app_messages_edit', {'id': t_message.id}) }}">edit</a>

    {{ include('messages/_delete_form.html.twig') }}
{% endblock %}
